<% if(success && success.length) { %>
        <div class="row">
            <div class="col-md-6 offset-md-3 alert alert-dismissible fade show text-success" role="alert">
                <%= success %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        </div>
<% } %>

<% if(error && error.length) { %>
    <div class="row">
        <div class="col-md-6 offset-md-3 alert alert-dismissible fade show text-danger" role="alert">
            <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    </div>
<% } %>
